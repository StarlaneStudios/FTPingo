CREATE TABLE IF NOT EXISTS ftp_connections (
    connection_id INTEGER PRIMARY KEY,
    connection_host TEXT NOT NULL,
    connection_port INTEGER NOT NULL,
    connection_username TEXT NOT NULL,
    connection_password TEXT NOT NULL,
    folder_id INTEGER NULL,
    FOREIGN KEY (folder_id)
        REFERENCES ftp_groups (folder_id)
            ON DELETE SET NULL
);

CREATE TABLE IF NOT EXISTS ftp_groups (
    folder_id INTEGER PRIMARY KEY,
    name TEXT NOT NULL
);

