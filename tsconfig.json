{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "allowJs": true,
        "declaration": true,
        "paths": {
            "~/": [ "src/index" ],
            "~/*": [ "src/*" ]
        }
    },
    "references": [
        {
            "path": "./tsconfig.vite-config.json"
        }
    ]
}