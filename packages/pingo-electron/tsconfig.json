{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
        "lib": [ "esnext" ],
        "strict": true,
        "moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		}
	},
	"include": [ "src" ],
	"exclude": [ "node_modules", "dist" ]
}